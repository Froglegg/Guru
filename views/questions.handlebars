            <p>
              <p>
                <strong>Body</strong>: {{questions.body}}</p>
              <p>
                <p>
                  <strong>Status</strong>: {{questions.status}}</p>
              </p>
      </div>

  <div class="media" id="answer-box">
  <div class="media-body">
    <h4 class="mt-0 mb-1">Solutions</h4>
    <ul id="responses-list" class="list-group">
        {{#each responses}}
        <div style="background-color: rgba(194, 193, 193, 0.945)" class="card-header d-flex w-100 justify-content-between">
          <h5 class='mb-1'>John Smith</h4><small>3 days ago</small>
        </div>
        <p class="mb-1 card-body">{{this.body}}</p>
        {{/each}}
      </ul>
  </div>
  
