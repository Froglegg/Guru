<div class="main">
  <div class="topbar slide-up">
    <h1>Guru</h1>
  </div>
  <div class="sidebar slide-left-1">
    <h2>Here is the sidebar</h2>
  </div>
  <div class="main-view slide-left-2"> 
            <h1>{{msg}}</h1>
        <h2>Welcome to the index!</h2>
        <form class="clearfix mb-4" id="create-form" action="POST">
                    <div class="form-group">
            <label for="employee-text">Employee name</label>
            <input type="text" id="employee-text" class="form-control" aria-describedby="employee-text" placeholder="Your name">
          </div>
          <div class="form-group">
            <label for="subject-text">Subject</label>
            <input type="text" id="subject-text" class="form-control" aria-describedby="subject-text" placeholder="Subject">
          </div>
          <div class="form-group">
            <label for="question-text">What is your question?</label>
            <textarea class="form-control" id="question-text" aria-describedby="question-text" placeholder="Enter Question"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>All Questions:</h3>
        <ul id="question-list" class="list-group">
          <!-- using partials will allows us to separate the questions on the main view using handlebars if statements, pulling all questions for now -->
          {{#each questions}}
          <div class="question-block">
            {{> questions/question-block }}
          </div>
          {{/each}}
        </ul>

  </div>
